<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="radius" format="dimension"></attr>
    <attr name="borderwidth" format="dimension"></attr>
    <attr name="bordercolor" format="color"></attr>
    <attr name="polygondistance" format="dimension"></attr>
    <attr name="polygonsides" format="integer"></attr>
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="polygon" value="1" />
    </attr>

    <declare-styleable name="MyView">
        <attr name="radius" />
        <attr name="borderwidth" />
        <attr name="bordercolor" />
        <attr name="polygondistance" />
        <attr name="polygonsides" />
        <attr name="type" />
    </declare-styleable>

</resources>