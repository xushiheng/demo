<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:endColor="#FFFFFF" android:gradientRadius="100" android:startColor="#FF0000" android:type="radial" />

            <stroke android:dashGap="2dp" android:dashWidth="1dp" android:width="2dp" android:color="@android:color/holo_purple" />

            <corners android:radius="2dp" />
        </shape></item>
    <item android:state_focused="true">
        <shape >
            <gradient android:endColor="#FFFFFF" android:gradientRadius="100" android:startColor="#FFD700" android:type="radial" />
            
            <stroke android:dashGap="2dp" android:dashWidth="1dp" android:width="2dp" android:color="@android:color/holo_purple" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <item ><shape >
        <gradient android:endColor="#FFFFFF"  android:startColor="#0000FF"  />
            
            <stroke android:dashGap="2dp" android:dashWidth="1dp" android:width="2dp" android:color="@android:color/holo_purple" />

            <corners android:radius="2dp" />
    </shape></item>

</selector>